    <section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row  align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6" >
          <div class="card" style="border-radius: 15px;width: 500px;height: 750px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              <form method="post" action="/signup">

                <div class="form-outline mb-4">
                  <input type="text" id="name" class="form-control form-control-lg" name="name" required="true" maxlength="30" />
                  <label class="form-label" for="form3Example1cg">Your Name</label>
                  <p id="nameError" style="color:red">  </p>
                </div>

                <div class="form-outline mb-4">
                  <input type="email" id="email" class="form-control form-control-lg" name="email" required="true" maxlength="30" />
                  <label class="form-label" for="form3Example3cg">Your Email</label>
                  <p id="emailError" style="color:red"></p>
                 
                </div>
              

                <div class="form-outline mb-4">
                  <input type="number" id="phonenumber" class="form-control form-control-lg" name="phonenumber" required="true" maxlength="30" />
                  <label class="form-label" for="">Phone number</label>
                    <br><p id="phoneError" style="color:red"></p>
                </div>
                <div class="form-outline mb-4">
                  <input type="password" id="password" class="form-control form-control-lg" name="password" required="true" maxlength="30"/>
                  <label class="form-label" for="password">Password</label><br>
                  <input type="checkbox" onclick="showPassword()">Show Password
                  <button class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" onclick="validate()">Send OTP</button>
                  <p id="passwordError" style="color:red"></p>
                  <% if(locals.userExist){ %>
                    <p style="color:red;margin-left: 150px;"> user already exist !</p>
                    <% }else{ %>
                      <p style="color:red;margin-left: 150px;"> </p>
                      <% } %>
                    <p class="text-center text-muted mt-5 mb-0">Have already an account? <a href="/loginpage"
                      class="fw-bold text-body"><u>Login here</u></a></p>
                </div>
         
               

              

                <div class="d-flex justify-content-center">
                 
                </div>
               
               
               
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script>function showPassword() {
  var x = document.getElementById("password");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}

  function validate(){
   
    

   
    const name=document.getElementById('name').value
    const email=document.getElementById('email').value
   
    const phonenumber=document.getElementById('phonenumber').value
    const password=document.getElementById('password').value  


    const nameRegex=/^[A-Z]/
    const passRegex = /^(?=.*\d{1,}).*$/;
    const emailRegex=/[a-zA-Z0-9._+%]+@gmail+\.[a-zA-Z]{3}$/
    
    const phoneRegex = /^\s*(?!0{5,})[0-9]{10}\s*$/;

    if(nameRegex.test(name)){
      nameError.innerHTML=''
    }else{
      nameError.innerHTML='Invalid name'
      event.preventDefault()
     
    }
    if(emailRegex.test(email)){
   
      emailError.innerHTML=''
    }else{

      emailError.innerHTML='Enter valid email'
      event.preventDefault()
      
    }
    if(phoneRegex.test(phonenumber)){
   
        phoneError.innerHTML=''
      }else{
        phoneError.innerHTML='Enter valid number'
        event.preventDefault()
        
      }

    
     if(passRegex.test(password)){
      passwordError.innerHTML=''
     }else{
      passwordError.innerHTML='Enter 8 digit password'
      event.preventDefault()
     }

  
      
    
    



  }   
</script>
