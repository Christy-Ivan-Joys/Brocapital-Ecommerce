<%-include ('header')%>



    <div class="page-body">
        
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card card-table">
                        <div class="card-body">
                            <div class="title-header option-title">
                                <h5>All Category</h5>
                                <form class="d-inline-flex">
                                    <a href="/admin/addcategorypage"
                                        class="align-items-center btn btn-theme d-flex">
                                        <i data-feather="plus-square"></i>Add New
                                    </a>
                                </form>
                            </div>

                            <div class="table-responsive category-table">
                                <div>
                                    <table class="table all-package theme-table" id="table_id">
                                        <thead>
                                            <tr>
                                              
                                               
                                                <th>Category</th>
                                                <th>Image</th>
                                                <th>Status</th>
                                                <th>Manage category</th>
                                                
                                                
                                                
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <%  if(category.length > 0) {%>
                                                <%for(let i=0;i<category.length;i++){%>
                                            <tr>
                                                <td><%= category[i].name%></td>

                                                
                                   


                                                <td>
                                                    <div class="table-image">
                                                        <img src="/adminassets/images/product/<%=category[i].image%>" class="img-fluid"
                                                            alt="">
                                                    </div>
                                                </td>
                                                <td><%= category[i].status%></td>
                                             
                                           

                                                <td>
                                                    <ul>
                                                        

                                                        <li>
                                                            <a href="/admin/editcategorypage/<%=category[i]._id%>">
                                                                <i class="ri-pencil-line"></i>
                                                            </a>
                                                        </li>

                                                        <li>
                                                            <a data-bs-toggle=""
                                                                data-bs-target="">
                                                                <i class="ri-delete-bin-line" onclick="deleteCategory('<%=category[i]._id%>')"></i>
                                                            </a>
                                                           
                                                        </li>
                                                    </ul>
                                                </td>
                                              </tr>
                                            <%}%>
                                            <%}%>
                                        </tbody>
                                    </table>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- All User Table Ends-->

        <div class="container-fluid">
            <!-- footer start-->
            <footer class="footer">
