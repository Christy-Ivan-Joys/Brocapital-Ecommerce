<% if (locals.totalPages) { %>
    <!-- Bootstrap Pagination -->
    <nav aria-label="Page navigation" style="margin-bottom: 60px;size:px ;">
        <ul class="pagination justify-content-center">
            <% if (locals.currentPage> 1) { %>
                <li class="page-item">
                    <a class="page-link btn-dark" href="?page=<%= locals.currentPage - 1 %>&category=<%= filtercategory %>&sort=<%= sortQuery%>&order=<%= sortValue%>&search=<%= searchword %>" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <% } else { %>
                    <li class="page-item disabled">
                        <span class="page-link btn-dark" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </span>
                    </li>
                    <% } %>

                        <% for (let i=1; i <=locals.totalPages; i++) { %>
                            <li class="page-item <%= i === locals.currentPage ? 'active' : '' %>">
                                <a class="page-link btn-dark" href="?page=<%= i %>&category=<%= filtercategory %>&sort=<%= sortQuery%>&order=<%= sortValue%>&search=<%= searchword %>">
                                    <%= i %>
                                </a>
                            </li>
                            <% } %>

                                <% if (locals.currentPage < locals.totalPages){ %>
                                    <li class="page-item">
                                        <a class="page-link btn" href="?page=<%= locals.currentPage + 1 %>&category=<%= filtercategory%>sort=<%= sortQuery%>&order=<%= sortValue%>&search=<%= searchword %>"
                                            aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                    <% } else { %>
                                        <li class="page-item disabled">
                                            <span class="page-link btn" aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </span>
                                        </li>
                                        <% } %>
        </ul>
    </nav>
    <% } %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.min.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.min.js"></script>


<script>

    

    function deleteCategory(id){
      

        Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, delete it!"
        }).then((result) => {
        if (result.isConfirmed) {
            $.ajax({
            url:'/admin/deleteCategory',
            method:'post',
            data:{
                categoryid:id,

            },success:function(response){
                Swal.fire({
                        title: "Deleted",
                        text: 'Category successfully deleted',
                        icon: 'success',
                        timer: 5000,
                    })
                    location.reload()
            },error:function(response){
                Swal.fire({
                        title: " Error",
                        text: 'Products existing category cannot be deleted !',
                        icon: 'error',
                        timer: 5000,
                    })
            }

        })
        }
        });
        
     
    }
</script>





