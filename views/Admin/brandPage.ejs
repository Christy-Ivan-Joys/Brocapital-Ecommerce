<%-include ('header')%>
    <style>
        .pagination {
            font-size: 18px;
        }

        .page-item {
            width: 40px;
            height: 40px;
            margin: 5px;
        }

        .page-link {
            background-color: rgb(26, 131, 87);
            color: #fff;
            border: 1px solid #000;
            border-radius: 0;
            min-width: 40px;
            text-align: center;
            padding: 0;
            line-height: 40px;
        }

        .page-item.active .page-link {
            background-color: #000;
            border-color: #000;
        }

        .page-item:last-child .page-link {
            background-color: #fff;
            /* Set the background color to white for the last button */
            color: #000;
            /* Set the text color to black for the last button */
        }

        .page-item:first-child .page-link {
            background-color: #fff;
            /* Set the background color to white for the first button (Previous) */
            color: #000;
            /* Set the text color to black for the first button (Previous) */
        }
    </style>


    <div class="page-body">

        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card card-table">
                        <div class="card-body">
                            <div class="title-header option-title">
                                <h5>All Brands
                                    <form class="d-inline-flex">
                                        <a href="/admin/AddBrandPage" class="align-items-center btn btn-theme d-flex"
                                            style="margin-left: 1150px;">
                                            <i data-feather="plus-square"></i>Add New
                                        </a>
                                    </form>
                            </div>

                            <div class="table-responsive category-table">
                                <div>
                                    <table class="table all-package theme-table" id="table_id">
                                        <thead>
                                            <tr>


                                                <th>Brand</th>

                                                <th>Status</th>
                                                <th>Manage Brand



                                            </tr>
                                        </thead>

                                        <tbody>
                                            <% if(brand.length> 0) {%>
                                                <%for(let i=0;i<brand.length;i++){%>
                                                    <tr>
                                                        <td>
                                                            <%= brand[i].name%>
                                                        </td>
                                                        <td>
                                                            <%= brand[i].status%>
                                                        </td>
                                                        <td>
                                                            <ul>


                                                                <li>
                                                                    <a href="/admin/editbrandPage/<%= brand[i]._id%>">
                                                                        <i class="ri-pencil-line"></i>
                                                                    </a>
                                                                </li>

                                                                <li>
                                                                    <a data-bs-toggle="" data-bs-target="">
                                                                        <i class="ri-delete-bin-line"
                                                                            onclick="deleteBrand('<%= brand[i]._id %>')"></i>
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </td>
                                                    </tr>
                                                    <div class="modal fade theme-modal remove-coupon"
                                                        id="exampleModalToggle" aria-hidden="true" tabindex="-1">
                                                        <div class="modal-dialog modal-dialog-centered">
                                                            <div class="modal-content">
                                                                <div class="modal-header d-block text-center">
                                                                    <h5 class="modal-title w-100"
                                                                        id="exampleModalLabel22">Are You Sure ?</h5>
                                                                    <button type="button" class="btn-close"
                                                                        data-bs-dismiss="modal" aria-label="Close">
                                                                        <i class="fas fa-times"></i>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div class="remove-box">
                                                                        <p>The permission for the use/group, preview is
                                                                            inherited from the object, object will
                                                                            create a
                                                                            new permission for this object</p>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button"
                                                                        class="btn btn-animation btn-md fw-bold"
                                                                        data-bs-dismiss="modal">No</button>
                                                                    <button id="categorydelete" type="button"
                                                                        class="btn btn-animation btn-md fw-bold">Yes</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <%}%>
                                                        <%}%>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>





                    </div>
                </div>

            </div>
            <% if (locals.totalPages) { %>
                <!-- Bootstrap Pagination -->
                <nav aria-label="Page navigation" style="margin-bottom: 60px;size:px ;margin-left: -200px;">
                    <ul class="pagination justify-content-center">
                        <% if (locals.currentPage> 1) { %>
                            <li class="page-item">
                                <a class="page-link btn-dark" href="?page=<%= locals.currentPage - 1 %>"
                                    aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <% } else { %>
                                <li class="page-item disabled">
                                    <span class="page-link btn-dark" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </span>
                                </li>
                                <% } %>

                                    <% for (let i=1; i <=locals.totalPages; i++) { %>
                                        <li class="page-item <%= i === locals.currentPage ? 'active' : '' %>">
                                            <a class="page-link btn-dark" href="?page=<%= i %>">
                                                <%= i %>
                                            </a>
                                        </li>
                                        <% } %>

                                            <% if (locals.currentPage < locals.totalPages){ %>
                                                <li class="page-item">
                                                    <a class="page-link btn" href="?page=<%= locals.currentPage + 1 %>"
                                                        aria-label="Next">
                                                        <span aria-hidden="true">&raquo;</span>
                                                    </a>
                                                </li>
                                                <% } else { %>
                                                    <li class="page-item disabled">
                                                        <span class="page-link btn" aria-label="Next">
                                                            <span aria-hidden="true">&raquo;</span>
                                                        </span>
                                                    </li>
                                                    <% } %>
                    </ul>
                </nav>
                <% } %>




        </div>

        <div class="container-fluid">
            <!-- footer start-->
            <footer class="footer">
                <div class="row">
                    <div class="col-md-12 footer-copyright text-center">
                        <p class="mb-0">Brocapitl since 2022</p>
                    </div>
                </div>
            </footer>
            <!-- footer end-->
        </div>
    </div>
    <!-- Container-fluid end -->



    <!-- Modal Start -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
        <div class="modal-dialog  modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <h5 class="modal-title" id="staticBackdropLabel">Logging Out</h5>
                    <p>Are you sure you want to log out?</p>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <div class="button-box">
                        <button type="button" class="btn btn--no" data-bs-dismiss="modal">No</button>
                        <a href="" type="button" class="btn  btn--yes btn-primary">Yes</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal End -->
    </div>


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.min.js"></script>



    <script>
        function deleteBrand(id) {

            alert(id)
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {

                if (result.isConfirmed) {

                    $.ajax({

                        url: '/admin/deleteBrand',
                        method: 'post',
                        data: {
                            brandId: id,

                        }, success: function (response) {

                            Swal.fire({
                                title: " Deleted",
                                text: 'Brand successfully deleted',
                                icon: 'success',
                                timer: 5000,
                            }).then(()=>{
                            location.reload()
                            })

                           
                        }, error: function (response) {

                            Swal.fire({
                                title: " Error",
                                text: 'Products existing brand cannot be deleted !',
                                icon: 'error',
                                timer: 5000,
                            })
                        }

                    })
                }
            })

        }
    </script>
    <!-- latest js -->
    <script src="/adminassets/js/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap js -->
    <script src="/adminassets/js/bootstrap/bootstrap.bundle.min.js"></script>

    <!-- feather icon js -->
    <script src="/adminassets/js/icons/feather-icon/feather.min.js"></script>
    <script src="/adminassets/js/icons/feather-icon/feather-icon.js"></script>

    <!-- scrollbar simplebar js -->
    <script src="/adminassets/js/scrollbar/simplebar.js"></script>
    <script src="/adminassets/js/scrollbar/custom.js"></script>

    <!-- customizer js -->
    <script src="/adminassets/js/customizer.js"></script>

    <!-- Sidebar js -->
    <script src="/adminassets/js/config.js"></script>

    <!-- Plugins JS -->
    <script src="/adminassets/js/sidebar-menu.js"></script>
    <script src="/adminassets/js/notify/bootstrap-notify.min.js"></script>
    <script src="/adminassets/js/notify/index.js"></script>

    <!-- Data table js -->
    <script src="/adminassets/js/jquery.dataTables.js"></script>
    <script src="/adminassets/js/custom-data-table.js"></script>

    <!-- sidebar effect -->
    <script src="/adminassets/js/sidebareffect.js"></script>

    <!-- Theme js -->
    <script src="/adminassets/js/script.js"></script>
    </body>


